#!/usr/bin/env node

var beet = require('../app/console'),
	args = process.argv.concat(),
	ops = {};

args.splice(0,2);


while(args.length)
{
	var arg = args.shift();
	
	switch(arg)
	{
		case 'start':
			ops.start = args.shift();
		break;
		case 'add':
			ops.add = args.shift();
		break;
		case 'name':
			ops.name = args.shift();
		break;
		case 'args':
			ops.args = args.concat();
			args = [];
		break;
		
		case 'stop':
			beet.stop(args.shift());
		break;
		case 'remove':
			beet.remove(args.shift());
		break;
		case 'list':
			beet.list();
		break;
		case 'debug':
			beet.debug();
		break;
		case "load":
			beet.load();
		break;
		case "unload":
			beet.unload();
		break;
	}
}

beet.handle(ops);
